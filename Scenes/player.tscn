script/source = "extends CharacterBody2D
var speed_x = 100
var speed_y = 50


@onready var animation_tree = $AnimationTree
@onready var animation_player = $AnimationPlayer
@onready var pivot = $Pivot
@onready var playback = animation_tree.get(\"parameters/playback\")

func get_H():
	var input_direction_H = Input.get_axis(\"left\", \"right\")
	if input_direction_H:
		velocity.x = input_direction_H * speed_x
	else:
		velocity.x = 0

func get_V():
	var input_direction_V = Input.get_axis(\"up\", \"down\")
	if input_direction_V:
		velocity.y = input_direction_V * speed_y
	else:
		velocity.y = 0

func animationplayer():
	if velocity.x == 0 and velocity.y == 0:
		animation_player.play(\"idle\")
	elif velocity.x != 0:
		if velocity.x > 0:
			animation_player.play(\"walk\")
			pivot.scale.x = 1
		if velocity.x < 0:
			animation_player.play(\"walk\")
			pivot.scale.x = -1
		
	elif velocity.y != 0:
		animation_player.play(\"walk\")
	elif Input.is_action_just_pressed(\"punch\"):
		animation_player.play(\"punch\")

func _physics_process(delta):
	get_H()
	get_V()
	animationplayer()
	move_and_slide()
"

